#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/../../../.editorconfig@0.13.2/bin/editorconfig" "$@"
  ret=$?
else 
  node  "$basedir/../../../.editorconfig@0.13.2/bin/editorconfig" "$@"
  ret=$?
fi
exit $ret
